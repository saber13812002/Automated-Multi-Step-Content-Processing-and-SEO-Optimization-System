# Server Configuration
NODE_ENV=production
API_PORT=3001

# Cron Configuration
CRON_ENABLED=true
CRON_SCHEDULE=0 * * * *
# Cron schedule format: minute hour day month weekday
# Examples:
#   "0 * * * *"     - Every hour at minute 0
#   "0 */2 * * *"   - Every 2 hours
#   "0 9,17 * * *"  - At 9 AM and 5 PM daily
#   "*/30 * * * *"  - Every 30 minutes

# File Paths
INPUT_DIR=/media/input
OUTPUT_DIR=/media/output

# Whisper Model Settings
WHISPER_MODEL=large
WHISPER_LANGUAGE=ar

# Notification Settings (at least one should be configured)
# Webhook URL for reports
REPORT_WEBHOOK_URL=

# Telegram Bot Settings (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

