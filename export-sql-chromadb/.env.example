## SQL source
BOOK_PAGES_SQL=book_pages.sql

## ChromaDB connection
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
CHROMA_API_KEY=
CHROMA_COLLECTION=book_pages
CHROMA_PERSIST_DIR=
CHROMA_BATCH_SIZE=48
CHROMA_ANONYMIZED_TELEMETRY=False

## Segmentation settings
CHUNK_MAX_LENGTH=200
CHUNK_CONTEXT_LENGTH=100

## Embedding provider
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=

## Redis connection (optional)
REDIS_URL=
# OR use individual settings:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

## Web service settings
APP_HOST=0.0.0.0
APP_PORT=8080
APP_LOG_LEVEL=INFO

## Feature flags for search statistics and pagination
ENABLE_TOTAL_DOCUMENTS=true
ENABLE_ESTIMATED_RESULTS=true
ENABLE_PAGINATION=true
MAX_ESTIMATED_RESULTS=1000
